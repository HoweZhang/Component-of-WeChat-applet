<view>
  <input password type="number" bindinput='set_wallets_password' maxlength="4" class="psw-input" focus="{{isFocus}}"></input>
  <view class="psw-box" catchtap='set_Focus'>
    <view class="psw-border">
      <i class="psw-border-i" wx:if="{{wallets_password.length>=1}}"></i>
    </view>
    <view class="psw-border">
      <i class="psw-border-i" wx:if="{{wallets_password.length>=2}}"></i>
    </view>
    <view class="psw-border">
      <i class="psw-border-i" wx:if="{{wallets_password.length>=3}}"></i>
    </view>
    <view class="psw-border">
      <i class="psw-border-i" wx:if="{{wallets_password.length>=4}}"></i>
    </view>
  </view>
  <view class="forget-psw">忘记密码？</view>
</view>

